@page
@model RomanPizza.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Just buy it</h1>
        <p class="">Only one pizza per order</p>

        <div class="container">
            <div class="row">
                <div class="col-12 mb-5 mt-5">
                    <div class="w-100 row makeYouOwnDiv">
                        <div class="col-4">
                            <img src="~/images/Pizzas/Create.png" class="w-100" />
                        </div>
                        <div class="col-8 align-items-center">
                            <div class="align-middle makeYouOwnText">
                                <h3>Create your own Pizza</h3>
                                <p class="left">Make your own Pizza with our PizzaMaker!</p>
                                <a class="btn btn-primary" asp-area="" asp-page="Forms/CustomPizza">Try now!</a>
                            </div>

                        </div>
                    </div>
                </div>
                @foreach (var pizza in Model.fakePizzaDB)
                {
                    var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");
                    <div class="col-4 mb-5">
                        <a class="" asp-area="" asp-page="Checkout/Checkout" 
                        asp-route-ImageTitle = "@pizza.ImageTitle" 
                        asp-route-PizzaName = "@pizza.PizzaName" 
                        asp-route-PizzaPrice = "@pizza.FinalPrice">
                            <img src="@imagePath" class="w-100" asp-append-version="true" />
                        </a>
                        <br />
                    </div>
                }

            </div>
        </div>
    </div>
</div>



